		( id,username,name,corpuserid,password,salt,gender,header,mobile,status,role,birthday,position,wechat,qq,loginAt,ip,createAt ) 
		VALUES 
		( #{id},#{username},#{name},#{corpuserid},#{password},#{salt},#{gender},#{header},#{mobile},#{status},#{role},#{birthday},#{position},#{wechat},#{qq},#{loginAt},#{ip},#{createAt} ) 
	</insert>

	<update id="update" parameterType="com.we.scrm.domain.AuthUser" flushCache="true">
		UPDATE auth_user
		<trim prefix="SET" suffixOverrides="," > 
			<if test="username != null ">
			username = #{username, jdbcType=VARCHAR},
			</if>
			<if test="name != null ">
			name = #{name, jdbcType=VARCHAR},
