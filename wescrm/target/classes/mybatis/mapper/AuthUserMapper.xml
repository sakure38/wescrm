	<sql id="all_columns">
		id, username, name, corpuserid, password, salt, gender, header, mobile, status, role, birthday, position, wechat, qq, loginAt, ip, createAt
	</sql>

	<select id="queryAll" parameterType="com.we.scrm.domain.AuthUser" resultMap="bean_map">
		SELECT 
		<include refid="all_columns"  />
		FROM auth_user
		ORDER BY id DESC
	</select>

	<select id="getTotalItemsCount" parameterType="com.we.scrm.domain.AuthUser" resultType="java.lang.Integer">
		SELECT COUNT(id) FROM auth_user
		<where>
			<if test="status != null">
				AND status = #{status}
			</if>
			<if test="@org.apache.commons.lang.StringUtils@isNotBlank(username)">
				AND username like CONCAT('%', #{username},'%')
			</if>
		</where>
	</select>

	<select id="queryPage" resultMap="bean_map">
		SELECT
		<include refid="all_columns"  />
		FROM auth_user
		<where>
			<if test="param1.status != null">
				AND status = #{param1.status}
			</if>
			<if test="@org.apache.commons.lang.StringUtils@isNotBlank(param1.username)">
				AND username like CONCAT('%', #{param1.username},'%')
			</if>
		</where>
		ORDER BY id DESC
		LIMIT #{param2.startIndex} , #{param2.pageSize} 
	</select>

	<select id="getById" parameterType="java.lang.Long" resultMap="bean_map">
		SELECT
		<include refid="all_columns"  />
		FROM auth_user
		WHERE id = #{id}
	</select>

	<select id="getByUsername" parameterType="java.lang.String" resultMap="bean_map">
		SELECT
		<include refid="all_columns"  />
		FROM auth_user
		WHERE username = #{username}
	</select>

	<insert id="create" parameterType="com.we.scrm.domain.AuthUser" flushCache="true"  useGeneratedKeys="true" keyProperty="id"  >
