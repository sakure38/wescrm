
.container {
  min-height: 100vh;
  background: #efefef;
  display: flex;
  flex-direction: row;
}
.category-nav{
  width: 250rpx;
  text-align: center;
  height: 100vh;
}
.nav-item{
  background: #efefef;
  color: #000000;
  height:100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
}
.active{
  background: #fff;
  color: #337ab7;
}
.product-content{
  display: flex;
  flex-direction: column;
  height: 100vh;
  align-content: flex-start;
  justify-content: flex-start;
  background-color: #fff;
}
.product-item{
  padding: 20rpx 20rpx 20rpx 10rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #efefef;
}

.product-item image{
  display: block;
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.price{
  color:#bf0008;
  margin-top:20rpx;
  font-weight:bold;
}
.name{
  margin-top: 10rpx;
  margin-left: 5rpx;
  height: 85rpx;
  white-space: wrap;
	overflow: hidden;
	text-overflow: ellipsis;
}